<%= form_with(model: friend, local: true) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
      <% friend.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <% form.label :first_name %>
    <br/>
    <%= form.text_field :first_name, id: :friend_first_name,
    class:"form-control", placeholder:"First name" %>
  </div>

  <div class="field form-group">
    <% form.label :last_name %>
    <br>
    <%= form.text_field :last_name, id: :friend_last_name,
    class:"form-control", placeholder:"Last Name"%>
  </div>

  <div class="field form-group">
    <% form.label :email %>
    <br>
    <%= form.text_field :email, id: :friend_email,
    class:"form-control", placeholder:"Email" %>
  </div>

  <div class="field form-group">
    <% form.label :phone %>
    <br>
    <%= form.text_field :phone, id: :friend_phone,
    class:"form-control", placeholder:"Phone Number" %>
  </div>

  <div class="field form-group">
    <% form.label :twitter %>
    <br>
    <%= form.text_field :twitter, id: :friend_twitter,
    class:"form-control", placeholder:"Twitter Handle" %>
  </div>

  <div class="actions">
    <br>
    <%= form.submit class:'btn btn-secondary' %>
  </div>
<% end %>
